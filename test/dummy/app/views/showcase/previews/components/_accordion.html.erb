<%
  showcase.title "Accordion"
  showcase.description "A vertically stacked set of interactive headings that each reveal a section of content."
%>

<% showcase.sample "Base" do %>
  <%= render_accordion(
    items: [
      {
        trigger: "Is it accessible?",
        content: "Yes. It adheres to the WAI-ARIA design pattern using the native HTML details and summary elements."
      }
    ]
  ) %>
<% end %>

<% showcase.sample "Multiple Items" do %>
  <%= render_accordion(
    items: [
      {
        trigger: "Is it accessible?",
        content: "Yes. It adheres to the WAI-ARIA design pattern using the native HTML details and summary elements."
      },
      {
        trigger: "Is it styled?",
        content: "Yes. It comes with default styles that match the other components' aesthetic."
      },
      {
        trigger: "How does it work?",
        content: "The accordion uses HTML's native <details> and <summary> elements, which provide built-in functionality for expanding and collapsing content without JavaScript."
      }
    ]
  ) %>
<% end %>

<% showcase.sample "With Complex Content" do %>
  <%= render_accordion(
    items: [
      {
        trigger: "Can I use complex content?",
        content: capture do %>
          <div class="prose prose-zinc dark:prose-invert max-w-none prose-a:font-semibold prose-a:text-primary prose-a:no-underline hover:prose-a:underline">
            <p>Yes! You can include complex content directly using a capture block:</p>
            <ul>
              <li>Lists</li>
              <li>Links - <a href="#">Example link</a></li>
              <li>And other HTML elements</li>
            </ul>
          </div>
        <% end
      }
    ]
  ) %>
<% end %>
