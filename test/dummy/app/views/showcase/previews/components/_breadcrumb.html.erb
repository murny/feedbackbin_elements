<%
  showcase.title "Breadcrumb"
  showcase.description "Displays the path to the current resource using a hierarchy of links."
%>

<% showcase.sample "Base Breadcrumb" do %>
  <%= render_breadcrumb [
    { text: "Home", path: "#" },
    { text: "Components", path: "#" },
    { text: "Breadcrumb", path: nil }
  ] %>
<% end %>

<% showcase.sample "Multiple Levels" do %>
  <%= render_breadcrumb [
    { text: "Home", path: "#" },
    { text: "Docs", path: "#" },
    { text: "Components", path: "#" },
    { text: "Navigation", path: "#" },
    { text: "Breadcrumb", path: nil }
  ] %>
<% end %>
