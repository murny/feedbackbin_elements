<%
  showcase.title "Card"
  showcase.description "Displays a card with header, content, and footer."
%>

<% showcase.sample "Base Card" do %>
  <%= render_card(
    title: "Card Title",
    description: "This is a simple card with just a title and description."
  ) %>
<% end %>

<% showcase.sample "With Content Block" do %>
  <%= render_card(
    title: "Notifications",
    description: "You have 3 unread messages."
  ) do %>
    <div class="px-6 pb-6">
      <p class="text-sm">Check your inbox for the latest updates and messages from your team.</p>
    </div>
  <% end %>
<% end %>

<% showcase.sample "With Form" do %>
  <%= render_card(
    title: "Login to your account",
    description: "Enter your email below to login to your account"
  ) do %>
    <div class="px-6 pb-6">
      <form>
        <div class="flex flex-col gap-4">
          <div class="grid gap-2">
            <label for="email" class="text-sm font-medium leading-none">Email</label>
            <input
              type="email"
              id="email"
              placeholder="m@example.com"
              class="h-9 rounded-md border bg-transparent px-3 text-sm"
              autocomplete="email">
          </div>

          <div class="grid gap-2">
            <label for="password" class="text-sm font-medium leading-none">Password</label>
            <input
              type="password"
              id="password"
              class="h-9 rounded-md border bg-transparent px-3 text-sm"
              autocomplete="current-password">
          </div>

          <%= render_button(variant: :default, type: "submit", class: "w-full") do %>
            Login
          <% end %>
        </div>
      </form>
    </div>
  <% end %>
<% end %>
